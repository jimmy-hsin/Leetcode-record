class Solution {
public:
    int minimumLength(string s) {
        vector<int> count(26,0);
        for(int i=0;i<s.size();i++){
            count[s[i]-'a']++;
        }
        int sum=0;
        for(int& i:count){
            if(i==0)    continue;
            if(i%2)
                sum++;
            else
                sum+=2;
        } 
        return sum;
    }
};
